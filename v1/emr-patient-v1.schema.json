{
  "$id": "https://github.com/projectronin/contract-event-emr-patient/v1/emr-patient-v1.schema.json",
  "title": "EMR Patient V1",
  "description": "A patient resource from the EMR",
  "type": "object",
  "properties": {
    "create" : {
      "$ref": "#/$defs/patient",
      "description": "This represents an event when a new Patient is created"
    },
    "update": {
      "$ref": "#/$defs/patient",
      "description": "This represents an event when a new Patient is created"
    },
    "delete": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "tenantId": {
          "type": "string"
        },
        "deletedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "tenantId", "deletedAt"]
    }
  },
  "$defs":  {
    "coding": {
      "type": "object",
      "description": "This defines the required attributed for a FHIR code",
      "properties": {
        "system": {
          "description": "The coding system that defines what the code represents",
          "type": "string"
        },
        "code": {
          "description": "The specific code determined by the system that specifies the value.",
          "type": "string"
        },
        "display": {
          "description": "The human readable value for the code",
          "type": "string"
        },
        "version": {
          "description": "The specific version of the system where the code is defined",
          "type": "string"
        }
      },
      "required": ["system", "code", "display"]
    },
    "codeableConcept": {
      "type": "object",
      "properties": {
        "coding": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/coding"
          },
          "minItems": 1
        },
        "text": {
          "type": "string"
        }
      }
    },
    "roninCodeableConcept": {
      "type":"object",
      "description": "This is a CodeableConcept with an extracted emrText attribute that dictates the correct value to repsent in an EMR context.",
      "properties": {
        "emrText": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "coding": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/coding"
          },
          "minItems": 1
        }
      },
      "required": ["emrText", "coding"]
    },
    "roninValueCode": {
      "type": "object",
      "properties": {
        "emrText": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "valueCode": {
          "type": "string"
        }
      }
    },
    "datePeriod": {
      "type": "object",
      "properties": {
        "start": {
          "type": "string",
          "format": "date"
        },
        "end": {
          "type": "string",
          "format": "date"
        }
      },
      "required": ["start", "end"]
    },
    "address": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string"
        },
        "line": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "city": {
          "type": "string"
        },
        "district": {
          "type": "string"
        },
        "state": {
          "type":"string"
        },
        "postalCode": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "period": {
          "$ref": "#/$defs/datePeriod"
        }
      }
    },
    "contactPoint": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "description": "The original system defined by the EMR"
        },
        "value": {
          "type": "string",
          "description": "The actual phone number or email address"
        },
        "use": {
          "type": "string",
          "description": "The original use definition in the EMR"
        }
      },
      "required": ["value"]
    },
    "roninContactPoint": {
      "type": "object",
      "properties": {
        "system": {
          "type": "string",
          "description": "The original system defined by the EMR"
        },
        "roninSystem": {
          "type": "string",
          "description": "Ronin's normalized system"
        },
        "value": {
          "type": "string",
          "description": "The actual phone number or email address"
        },
        "use": {
          "type": "string",
          "description": "The original use definition in the EMR"
        },
        "roninUse": {
          "type": "string",
          "description": "Ronin's normalized system"
        }
      },
      "required": ["value"]
    },
    "identifier": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/codeableConcept"
        },
        "system": {
          "type": "string",
          "format": "uri"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "attachment": {
      "type": "object",
      "properties": {
        "contentType": {
          "type": "string"
        },
        "language": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "size": {
          "type": "integer",
          "minimum": 1
        },
        "hash": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "creation": {
          "type": "string"
        },
        "height": {
          "type": "integer",
          "minimum": 1
        },
        "width": {
          "type": "integer"
        }
      }
    },
    "resourceReference": {
      "type": "object",
      "properties": {
        "resource": {
          "type": "object",
          "description": "When this exists, it represents a reference to an actual resource. This is derived from the data specified in `reference`.",
          "properties": {
            "type": {
              "type": "string",
              "description": "This is the ronin resource type"
            },
            "id": {
              "type": "string",
              "description": "This is the ronin ID for the resource"
            }
          }
        },
        "type": {
          "type": "string",
          "description": "The FHIR type attribute of the resource"
        },
        "reference": {
          "type": "string",
          "format": "uri-template",
          "description": "This should refer to a `resource.type/resource.id` but could refer to an external resource"
        },
        "identifier": {
          "$ref": "#/$defs/identifier"
        },
        "display": {
          "type": "string"
        }
      }
    },
    "contact": {
      "type": "object",
      "properties": {
        "relationship": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/roninCodeableConcept"
          }
        },
        "name": {
          "$ref": "#/$defs/humanName"
        },
        "telecom": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/contactPoint"
          }
        },
        "address": {
          "$ref": "#/$defs/address"
        },
        "gender": {
          "type": "string"
        },
        "organization": {
          "$ref": "#/$defs/resourceReference"
        },
        "period": {
          "$ref": "#/$defs/datePeriod"
        }
      }
    },
    "humanName": {
      "type": "object",
      "properties": {
        "use": {
          "type": "string",
          "description": "The purpose of the name"
        },
        "text": {
          "type": "string",
          "description": "Representation of the full name"
        },
        "family": {
          "type": "string",
          "description": "Family name or Surname"
        },
        "given": {
          "type": "array",
          "description": "Given names: first, middle",
          "items": {
            "type": "string"
          }
        },
        "prefix": {
          "type": "array",
          "description": "Name parts before the name",
          "items": {
            "type": "string"
          }
        },
        "suffix": {
          "type": "array",
          "description": "Name parts after the name",
          "items": {
            "type": "string"
          }
        },
        "period": {
          "$ref": "#/$defs/datePeriod",
          "description": "Time period when the name was in use"
        }
      },
      "required": ["family", "given"]
    },
    "communication": {
      "type": "object",
      "properties": {
        "language": {
          "$ref": "#/$defs/roninCodeableConcept"
        },
        "preferred": {
          "type": "boolean"
        }
      },
      "required": ["language"]
    },
    "patient": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Ronnin Common ID for the Patient"
        },
        "fhirId": {
          "type": "string",
          "description": "The Patient's FHIR ID"
        },
        "tenantId": {
          "type": "string",
          "description": "Ronin tenant/organization the Patient is associated with"
        },
        "mrn": {
          "type": "string",
          "description": "EMR identifier for the Patient"
        },
        "resourceVersion": {
          "type": "string",
          "description": "An increasing version value"
        },
        "identifiers": {
          "type": "array",
          "description": "Miscelaneous identifiers in the EMR",
          "items": {
            "$ref": "#/$defs/identifier"
          }
        },
        "race": {
          "$ref": "#/$defs/roninCodeableConcept",
          "description": "US Core race classification"
        },
        "ethnicity": {
          "$ref": "#/$defs/roninCodeableConcept",
          "description": "US Core ethnicity classification"
        },
        "birthSex": {
          "$ref": "#/$defs/roninValueCode",
          "description": "Patient's gender as assigned at birth"
        },
        "genderIdentity": {
          "$ref": "#/$defs/roninCodeableConcept",
          "description": "Patient's identified gender"
        },
        "religion": {
          "$ref": "#/$defs/roninCodeableConcept",
          "description": "Patient's professed religion"
        },
        "active": {
          "type": "boolean",
          "description": "Whether the Patient's record is in active use"
        },
        "name": {
          "type": "array",
          "description": "Patient's name",
          "items": {
            "$ref": "#/$defs/humanName"
          }
        },
        "telecom": {
          "type": "array",
          "description": "Patient's contact details",
          "items": {
            "$ref": "#/$defs/roninContactPoint"
          }
        },
        "gender": {
          "type": "string",
          "description": "Patient's Administrative Gender"
        },
        "birthDate": {
          "type": "string",
          "format": "date",
          "description": "Patient's birthdate"
        },
        "deceased": {
          "type": "object",
          "properties": {
            "isDeceased": {
              "type": "boolean",
              "description": "Whether the Patient is deceased"
            },
            "deceasedDateTime": {
              "type": "string",
              "format": "date-time",
              "description": "If the Patient is deceased this is the time of death"
            }
          },
          "required": ["isDeceased"]
        },
        "address": {
          "type": "array",
          "description": "Patient's home address",
          "items": {
            "$ref": "#/$defs/address"
          }
        },
        "maritalStatus": {
          "$ref": "#/$defs/roninCodeableConcept",
          "description": "Patient's marital status"
        },
        "multipleBirth": {
          "type": "object",
          "properties": {
            "isMultipleBirth": {
              "type": "boolean",
              "description": "Whether the Patient was part of a multiple birth"
            },
            "birthOrder": {
              "type": "integer",
              "minimum": 1,
              "description": "The order in which they were born"
            }
          },
          "required": ["isMultipleBirth"]
        },
        "photo": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/attachment",
            "description": "Photo of the Patient"
          }
        },
        "contact": {
          "type": "array",
          "description": "Point of Contact for the Patient",
          "items": {
            "$ref": "#/$defs/contact"
          }
        },
        "communication": {
          "type": "array",
          "description": "Languages that may be used to communicate with the Patient",
          "items": {
            "$ref": "#/$defs/communication"
          }
        },
        "generalPractitioner": {
          "$ref": "#/$defs/resourceReference",
          "description": "Patient's nominated primary care Practitioner"
        },
        "managingOrganization": {
          "$ref": "#/$defs/resourceReference",
          "description": "Organization that is the custodian of the Patient's record"
        },
        "link": {
          "type": "object",
          "description": "Link to another patient record that refers to this Patient",
          "properties": {
            "other": {
              "$ref": "#/$defs/resourceReference"
            },
            "type": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "udpatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "fhirId",
        "tenantId", 
        "mrn", 
        "resourceVersion", 
        "birthDate", 
        "gender", 
        "name", 
        "createdAt", 
        "updatedAt"
      ]
    }
  }
}